<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hero_image"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_height="300dp"
        android:src="@drawable/ic__223373"/>

    <TextView
        android:layout_marginHorizontal="20dp"
        android:id="@+id/hero_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:text="SJI Production Info Apps" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hero_text"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="An easy way for tracking component information"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/btn_scan"
        android:layout_above="@id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/btn_shape">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="3dp"
            android:includeFontPadding="false"
            android:text="SCAN QR CODE"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Close App"
            android:textSize="20sp"/>
    </LinearLayout>


</RelativeLayout>